{
  "name": "@koolie/tooling",
  "version": "0.3.0",
  "description": "Koolie - Tooling required to build Koolie packages and apps",
  "license": "MIT",
  "author": "David Tymon",
  "type": "module",
  "koolie-module": "tooling",
  "repository": {
    "type": "git",
    "url": "https://github.com/dtymon/koolie-tooling"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "keywords": [
    "koolie",
    "microservices",
    "typescript"
  ],
  "scripts": {
    "clean": "rimraf ./dist",
    "compile": "tsc",
    "dist": "yarn koolie build-dist -f .eslintignore .eslint.config.js .eslint.config.spec.js jest tsconfig.json tsconfig.spec.json tsdoc.json",
    "build": "yarn clean && yarn compile && yarn dist",
    "lint:src": "ESLINT_USE_FLAT_CONFIG=true eslint --config .eslint.config.js --no-error-on-unmatched-pattern --ignore-pattern 'src/**/*.spec.ts' 'src/**/*.ts'",
    "lint:test": "ESLINT_USE_FLAT_CONFIG=true eslint --config .eslint.config.spec.js --no-error-on-unmatched-pattern 'src/**/*.spec.ts' 'tests/*.spec.ts' 'tests/**/*.spec.ts'",
    "lint": "yarn lint:src && yarn lint:test",
    "lint:fix:src": "ESLINT_USE_FLAT_CONFIG=true eslint --fix --config .eslint.config.js --no-error-on-unmatched-pattern --ignore-pattern 'src/**/*.spec.ts' 'src/**/*.ts'",
    "lint:fix:test": "ESLINT_USE_FLAT_CONFIG=true eslint --fix --config .eslint.config.spec.js --no-error-on-unmatched-pattern 'src/**/*.spec.ts' 'tests/*.spec.ts' 'tests/**/*.spec.ts'",
    "lint:fix": "yarn lint:fix:src && yarn lint:fix:test",
    "test": "NODE_CONFIG_DIR=./etc/config NODE_ENV=test yarn node --experimental-vm-modules $(yarn bin jest) --passWithNoTests",
    "koolie-audit": "yarn run improved-yarn-audit --fail-on-missing-exclusions --ignore-dev-deps --min-severity high",
    "pre-commit": "yarn build && yarn test && yarn lint && yarn koolie-audit",
    "koolie": "node ./dist/koolie",
    "reinstall": "rimraf node_modules yarn.lock; yarn install",
    "release": "yarn build && yarn lint && yarn test && yarn koolie-audit && yarn mkdirp releases && yarn --cwd dist pack --filename releases/koolie-${npm_package_koolie_module}-v${npm_package_version}.tgz",
    "npm-publish": "yarn publish --no-git-tag-version --no-commit-hooks --access public releases/koolie-${npm_package_koolie_module}-v${npm_package_version}.tgz",
    "docs": "yarn koolie build-docs --src src --no-preferIndex"
  },
  "files": [
    ".eslintignore",
    ".eslint.config.js",
    ".eslint.config.spec.js",
    "CHANGELOG.md",
    "README.md",
    "jest",
    "tsconfig.json",
    "tsconfig.spec.json",
    "tsdoc.json",
    "**/*.{ts,js,cjs,mjs,json,pem}",
    "*.map"
  ],
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./cli": "./dist/cli/index.js",
    "./cli/*": "./dist/cli/*.js",
    "./jest/*": "./dist/jest/*",
    "./package.json": "./package.json"
  },
  "bin": {
    "koolie": "./dist/koolie.js",
    "koolie-SubCmdAddPackage.js": "./dist/koolie-SubCmdAddPackage.js",
    "koolie-SubCmdBuildDocs.js": "./dist/koolie-SubCmdBuildDocs.js",
    "koolie-SubCmdBuildDist.js": "./dist/koolie-SubCmdBuildDist.js",
    "koolie-SubCmdBuildTypes.js": "./dist/koolie-SubCmdBuildTypes.js",
    "koolie-SubCmdCreateRC.js": "./dist/koolie-SubCmdCreateRC.js",
    "koolie-SubCmdCurl.js": "./dist/koolie-SubCmdCurl.js",
    "koolie-SubCmdRemovePackage.js": "./dist/koolie-SubCmdRemovePackage.js"
  },
  "dependencies": {
    "@microsoft/tsdoc": "0.14.2",
    "@microsoft/tsdoc-config": "0.16.2",
    "@types/fs-extra": "11.0.4",
    "@types/glob-to-regexp": "0.4.4",
    "@types/jest": "29.5.12",
    "@types/jest-when": "3.5.5",
    "@types/klaw": "3.0.6",
    "@types/node": "20.12.11",
    "@types/yargs": "17.0.32",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.1.3",
    "eslint-plugin-tsdoc": "0.2.17",
    "expect-more-jest": "5.5.0",
    "fs-extra": "11.2.0",
    "glob-to-regexp": "0.4.1",
    "improved-yarn-audit": "3.0.0",
    "jest": "29.7.0",
    "jest-junit": "16.0.0",
    "jest-when": "3.6.0",
    "json": "11.0.0",
    "json5": "2.2.3",
    "klaw": "4.1.0",
    "mkdirp": "3.0.1",
    "nodemon": "3.1.0",
    "prettier": "3.2.5",
    "rimraf": "5.0.5",
    "supertest": "7.0.0",
    "ts-jest": "29.1.2",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "tsx": "4.11.0",
    "typedoc": "0.25.13",
    "typedoc-gitlab-wiki-theme": "1.1.1",
    "typedoc-plugin-markdown": "3.17.1",
    "typedoc-plugin-merge-modules": "5.1.0",
    "typescript": "5.4.5",
    "typescript-eslint": "7.8.0",
    "yaml": "2.4.2",
    "yargs": "17.7.2",
    "zod": "3.23.8"
  }
}
